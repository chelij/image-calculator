{
  "name": "image-calculator",
  "version": "1.0.1",
  "description": "Calculator app that processes numbers from images",
  "main": "src/main.js",
  "scripts": {
    "start": "rimraf dist && webpack && electron .",
    "build": "rimraf dist && webpack && electron-builder",
    "webpack": "webpack --watch",
    "dev": "concurrently \"npm run webpack\" \"electron .\"",
    "pack:win": "npm run build && electron-builder --win",
    "pack:mac": "npm run build && electron-builder --mac",
    "pack:linux": "npm run build && electron-builder --linux"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tesseract.js": "^4.1.1"
  },
  "devDependencies": {
    "@babel/core": "^7.23.9",
    "@babel/preset-env": "^7.23.9",
    "@babel/preset-react": "^7.23.3",
    "babel-loader": "^9.1.3",
    "copy-webpack-plugin": "^12.0.2",
    "css-loader": "^6.10.0",
    "electron": "^28.2.1",
    "electron-builder": "^24.9.1",
    "html-webpack-plugin": "^5.6.0",
    "rimraf": "^5.0.5",
    "style-loader": "^3.3.4",
    "webpack": "^5.90.1",
    "webpack-cli": "^5.1.4",
    "concurrently": "^8.2.2",
    "glob": "^10.3.10"
  },
  "overrides": {
    "glob": "^10.3.10",
    "inflight": "^2.0.0"
  },
  "build": {
    "appId": "com.imagecalculator.app",
    "productName": "Image Calculator",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "src/main.js",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "assets/tessdata",
        "to": "tessdata",
        "filter": ["**/*"]
      }
    ],
    "win": {
      "target": [{
        "target": "nsis",
        "arch": ["x64"]
      },
      {
        "target": "portable",
        "arch": ["x64"]
      }],
      "icon": "assets/icon.ico",
      "extraResources": [
        {
          "from": "assets",
          "to": "assets"
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "assets/icon.png"
    }
  }
}
